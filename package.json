{
  "name": "vimond-replay",
  "version": "0.15.0",
  "author": "Tor Erik Alr√¶k",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://vimond.jfrog.io/vimond/api/npm/npm-local/"
  },
  "main": "lib/index.js",
  "files": [
    "lib",
    "guide.md",
    "README.md"
  ],
  "scripts": {
    "start": "PORT=3033 react-scripts start",
    "build": "react-scripts build",
    "build-lib": "npm run build-es5 && npm run build-flow && npm run build-css",
    "build-es5": "babel src/replay -d lib --copy-files --source-maps",
    "build-flow": "flow-copy-source src/replay lib",
    "build-css": "postcss src/replay/replay-default.css -o lib/index.css",
    "docs": "x0 docs --webpack webpack.x0.config.js",
    "build-docs": "x0 build docs --webpack webpack.x0.config.js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "memoize-one": "^4.0.0",
    "react-feather": "^1.1.0"
  },
  "devDependencies": {
    "@compositor/x0": "^6.0.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "1.5.0",
    "enzyme-to-json": "^3.3.4",
    "flow-bin": "0.76.0",
    "flow-copy-source": "^1.3.0",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.1.0",
    "postcss-url": "^7.3.2",
    "prettier": "^1.12.1",
    "react": "16.5.0",
    "react-dom": "16.5.0",
    "react-persist": "^1.0.2",
    "react-scripts": "1.1.4",
    "style-loader": "^0.22.1",
    "test-cli": "^0.1.0"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "flow",
    "jsxBracketSameLine": true
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "x0": {
    "title": "Replay docs"
  }
}
